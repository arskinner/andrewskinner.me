---
import Container from '@components/Container.astro'
import PageLayout from '@layouts/PageLayout.astro'
import Link from '@components/Link.astro'
import { SITE, HOME, SOCIALS } from '@consts'
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <h4 class="animate font-semibold text-black dark:text-white">
      I'm Andrew <span class="text-xl">👋🏻</span>
    </h4>
    <div class="space-y-16">
      <section>
        <article class="space-y-4">
          <p class="animate">
            I am a founder and <Link href="/investments">angel investor</Link>.
          </p>
          <p class="animate">
            I am the co-founder and CTO of
            <Link href="https://www.purposelab.com">PurposeLab</Link>.
          </p>
          <p class="animate">
            In my spare time, I enjoy wine 🍷, puzzles 🧩, travel 🛫, skiing ⛷️,
            and playing music 🎸.
          </p>
        </article>
      </section>

      <section class="animate space-y-4">
        <h5 class="font-semibold text-black dark:text-white">Say Hi</h5>
        <ul class="flex flex-wrap gap-2">
          {
            SOCIALS.map((SOCIAL) => (
              <li class="flex gap-x-2 text-nowrap">
                <Link
                  href={SOCIAL.HREF}
                  external
                  aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`}
                >
                  {SOCIAL.NAME}
                </Link>
                {'/'}
              </li>
            ))
          }
          <li class="line-clamp-1">
            <Link
              href={`mailto:${SITE.EMAIL}`}
              aria-label={`Email ${SITE.NAME}`}
            >
              {SITE.EMAIL}
            </Link>
          </li>
        </ul>
      </section>
    </div>
  </Container>
</PageLayout>
